<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:tree="urn:import:cn.mapway.ui.client.widget.tree">
    <g:DockLayoutPanel>
        <g:north size="50">
            <g:HTMLPanel styleName="ai-top">
                <widget:Header>角色树</widget:Header>
                <g:Button ui:field="btnCreate">添加角色</g:Button>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <tree:Tree ui:field="roleTree" width="100%"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>