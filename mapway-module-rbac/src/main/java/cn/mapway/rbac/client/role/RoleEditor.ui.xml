<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            padding: 10px;
        }

        .lb {
            width: 100px;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar ui:field="saveBar"/>
        </g:south>
        <g:center>
            <g:HTMLPanel styleName="{style.box}">
                <g:HorizontalPanel width="100%" spacing="4">
                    <g:cell width="100px">
                        <widget:Header addStyleNames="{style.lb}">角色名称</widget:Header>
                    </g:cell>
                    <g:TextBox addStyleNames="ai-input" ui:field="txtName"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel width="100%" spacing="4">
                    <g:cell width="100px">
                        <widget:Header addStyleNames="{style.lb}">角色代码</widget:Header>
                    </g:cell>
                    <g:TextBox addStyleNames="ai-input" ui:field="txtCode"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel width="100%" spacing="4">
                    <g:cell width="100px">
                        <widget:Header addStyleNames="{style.lb}">角色说明</widget:Header>
                    </g:cell>
                    <g:TextArea addStyleNames="ai-input" height="300px" ui:field="txtSummary"/>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>