<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: left;
            gap: 2rem;
            padding: 5rem;
        }

        .page {
            background: linear-gradient(45deg, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.6)),
            url(img/farm.webp) no-repeat;
            background-size: cover;
        }

        .title {
            color: white;
            font-size: 2rem;
            font-family: Iosevka;
        }

        .top {
            padding: 30px 40px;
        }

        .lb {
            color: white;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .row {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .logintitle {
            margin: 0 0 40px 0;
            color: #b6b6b6;
            font-size: 1.6rem;
        }

        .panel {
            border-radius: 8px;
            padding: 30px 60px 60px 60px;
            border: solid 1px rgba(255, 255, 255, 0.2);
        }

        .copy {
            color: #a0a0a0;
            font-size: 1rem;
            padding: 0 40px;
        }

        .bottom {
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

        .right {
            color: white;
            font-family: Iosevka;
        }

        .msg {
            color: #f0f0f0;
        }</ui:style>
    <g:DockLayoutPanel styleName="{style.page}">
        <g:north size="120">
            <g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.top}">
                <widget:FontIcon ui:field="logo" fontSize="80" color="tomato"/>
                <g:Label styleName="{style.title}">IOT-BOT</g:Label>
            </g:HorizontalPanel>
        </g:north>
        <g:south size="30">
            <g:HTMLPanel styleName="{style.bottom}">
                <g:HorizontalPanel>
                    <g:HTML styleName="{style.copy}">© 2024 <span class="{style.right}">imagebot.cn</span></g:HTML>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:south>
        <g:center>
            <g:HTMLPanel styleName="{style.box}">
                    <g:HTMLPanel styleName="{style.panel}">
                        <table cellpadding="10" cellspacing="0">
                            <tr>
                                <td>
                                    <div class="{style.logintitle}">登录</div>
                                </td>
                            </tr>
                            <tr class="{style.row}">
                                <td><span class="{style.lb}">用户名</span></td>
                                <td>
                                    <g:TextBox ui:field="txtName"/>
                                </td>
                            </tr>
                            <tr class="{style.row}">
                                <td ><span class="{style.lb}">密码</span></td>
                                <td>
                                    <g:PasswordTextBox styleName="gwt-TextBox"
                                                       ui:field="txtPassword"></g:PasswordTextBox>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <g:Button ui:field="btnLogin">登录</g:Button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <g:Label addStyleNames="{style.msg}" ui:field="lbMessage"/>
                                </td>
                            </tr>
                        </table>
                    </g:HTMLPanel>
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>