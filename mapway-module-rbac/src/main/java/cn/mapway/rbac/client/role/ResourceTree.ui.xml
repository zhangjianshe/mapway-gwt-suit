<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:tree="urn:import:cn.mapway.ui.client.widget.tree"
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:inspector="urn:import:cn.mapway.ui.client.mvc.attribute.editor.inspector">
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar ui:field="saveBar"/>
        </g:south>
        <g:north size="50">
            <g:HTMLPanel styleName="ai-top">
                <widget:Header>系统权限点</widget:Header>
                    <g:HorizontalPanel>
                        <g:Button  ui:field="btnCreate">新建资源点</g:Button>
                        <g:Button  ui:field="btnDelete">删除资源点</g:Button>
                    </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
        <g:east size="300">
            <inspector:ObjectInspector labelWidth="80" addStyleNames="ai-border-left" vertical="true" ui:field="objectInspector"/>
        </g:east>
        <g:center>
            <g:ScrollPanel>
                <tree:ZTree ui:field="resourceTree" width="100%"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>