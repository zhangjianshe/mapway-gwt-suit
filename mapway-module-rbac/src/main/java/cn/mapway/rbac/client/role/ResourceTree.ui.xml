<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog">
    <ui:style type="cn.mapway.rbac.client.role.ResourceTree.SStyle">
        .catalog {
            border-radius: 4px;
            padding: 4px 8px;
            border: solid 1px #f0f0f0;
            width: 100%;
        }

        .catalog:hover {
            background-color: cornflowerblue;
            color: white;
        }
        .catalog[select="true"]{
            background-color: cornflowerblue;
            color: white;
            font-weight: bold;
        }

        .index {
            display: grid;
            align-items: flex-start;
            justify-items: flex-start;
            gap: 4px;
            padding: 10px;
            cursor: default;
            user-select: none;
            flex-wrap: wrap;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar ui:field="saveBar"/>
        </g:south>
        <g:north size="50">
            <g:HTMLPanel styleName="ai-top">
                <widget:Header>系统权限点</widget:Header>
                <g:HorizontalPanel>
                    <g:Button ui:field="btnCreate">新建资源点</g:Button>
                    <g:Button ui:field="btnDelete">删除资源点</g:Button>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
        <g:west size="300">
            <g:ScrollPanel addStyleNames="ai-border-right">
                <g:HTMLPanel ui:field="indexPanel" addStyleNames="{style.index}">
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:FlexTable addStyleNames="attr-table" ui:field="table" width="100%"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>