<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:role="urn:import:cn.mapway.rbac.client.role"
>
    <ui:style>

    </ui:style>
    <g:DockLayoutPanel>
        <g:west size="450">
            <role:RoleTree addStyleNames="ai-border-right" ui:field="roleTree"/>
        </g:west>
        <g:north size="50">
            <g:HTMLPanel styleName="ai-top">
                <widget:Header ui:field="lbLabel"/>
                <widget:SearchBox width="200px" ui:field="searchBox"/>
                <g:HorizontalPanel ui:field="tools">
                    <role:ResourceKindDropdown ui:field="kindDropdown" width="250px"/>
                    <g:Button ui:field="btnAdd">添加资源</g:Button>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <role:ResourceTable ui:field="resourceTable">
                </role:ResourceTable>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>