<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:org="urn:import:cn.mapway.rbac.client.org"
             xmlns:user="urn:import:cn.mapway.rbac.client.user"
>
    <g:DockLayoutPanel>
        <g:west size="400">
            <g:DockLayoutPanel unit="PCT" addStyleNames="ai-border-right">
                <g:north size="50">
                    <org:OrgPanel ui:field="orgPanel"/>
                </g:north>
                <g:center>
                    <org:OrgUserListPanel  ui:field="userList"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:TabLayoutPanel barHeight="50" ui:field="tab">
                <g:tab>
                    <g:header>用户角色资源</g:header>
                    <user:UserRoleResourcePanel ui:field="userRoleResourcePanel"/>
                </g:tab>
                <g:tab>
                    <g:header>用户所在的组织列表</g:header>
                    <g:ScrollPanel>
                        <user:UserOrgListPanel width="100%" ui:field="userOrgList"/>
                    </g:ScrollPanel>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>