<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:l="urn:import:cn.mapway.test.client.openapi"
>
    <ui:style>

        .box {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-flow: row;
        }

        .search {
            border:solid 3px skyblue;
            background-color: #f0f0f0;
        }
    </ui:style>
    <g:LayoutPanel ui:field="root">
        <g:layer>
            <l:OpenApiPanel visible="false" ui:field="panel"/>
        </g:layer>
        <g:layer>
            <g:HTMLPanel styleName="{style.box}" ui:field="panelSearch">
                <g:HorizontalPanel height="40px" spacing="5" verticalAlignment="middle" styleName="{style.search}">
                    <g:TextBox ui:field="txtUrl" value="./example/pet31.json" width="500px"/>
                    <g:Button ui:field="btnSearch">查询</g:Button>
                </g:HorizontalPanel>
                <g:Label ui:field="lbMessage"/>
            </g:HTMLPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>