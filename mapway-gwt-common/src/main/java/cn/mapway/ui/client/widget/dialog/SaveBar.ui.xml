<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:buttons="urn:import:cn.mapway.ui.client.widget.buttons"

>
    <ui:style>
        .panel {
            display: flex;
            justify-content: end;
            align-items: center;
            gap: 5px;
            padding-right: 10px;
            justify-self: flex-end;
        }

        .box {
            display: flex;
            align-items: center;
        }

        .msg {
            align-self: center;
            padding-left: 10px;
            overflow-wrap: break-word;
            white-space: break-spaces;
            width: 100%;
            max-width: 100%;
            overflow: auto;
            max-height: 60px;
            justify-self: flex-start;
        }
    </ui:style>
    <g:HTMLPanel styleName="ai-savebar {style.box}">
        <g:Label addStyleNames="{style.msg}" ui:field="lbMessage"/>
        <g:HTMLPanel styleName="{style.panel}">
            <buttons:AiButton ui:field="btnSave">保存</buttons:AiButton>
            <buttons:AiButton buttonStyle="second" ui:field="btnCancel">取消</buttons:AiButton>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
