<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        @eval BK "var(--color-background)";
        @eval COLOR "var(--color-text-title)";
        @eval BK_HOVER "var(--color-background_hover)";
        @eval BK_SELECT "var(--color-background_selected)";


        .link {
            font-size: 1.2rem;
            font-weight: bold;
            color: COLOR;
            cursor: pointer;
        }

        .link2 {
            font-size: 1.2rem;
        }

        .link:HOVER {
            color: COLOR;
        }

        .box {
            display: inline-flex;
            gap: 4px;
            align-items: center;
            padding: 8px 20px;
        }

        .box:hover {
            background-color: BK_HOVER;
        }

        .box[select="true"] {
            background-color: BK_SELECT;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <widget:FontIcon ui:field="icon"/>
        <g:Anchor ui:field="btn" styleName="{style.link} {style.link2}">浏览数据集</g:Anchor>
    </g:HTMLPanel>
</ui:UiBinder>