<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget">

    <ui:style>
        .tools {
            margin-right: 10px;
        }

        .icon {
            margin-top: 2px;
            margin-left: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel ui:field="root">
        <g:north size="40">
            <g:HTMLPanel ui:field="panel">
                <g:HorizontalPanel ui:field="bar" width="100%" height="100%" spacing="0"
                                   verticalAlignment="middle">
                    <g:cell width="30px" verticalAlignment="middle">
                        <g:HorizontalPanel height="100%" verticalAlignment="middle" horizontalAlignment="center">
                            <g:Image ui:field="icon" visible="false" width="20px" height="20px"
                                     styleName="{style.icon}"/>
                            <widget:FontIcon visible="false" ui:field="fontIcon"/>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell width="130">
                        <widget:Header ui:field="lbTitle"/>
                    </g:cell>
                    <g:cell verticalAlignment="bottom">
                        <widget:AiTab ui:field="btnSubmodules"/>
                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <g:HorizontalPanel ui:field="tools" height="40px" styleName="{style.tools}"
                                           verticalAlignment="middle">
                        </g:HorizontalPanel>
                    </g:cell>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
    </g:DockLayoutPanel>

</ui:UiBinder>
