<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel ui:field="editor" styleName="{style.box}">
            <g:TextBox styleName="ai-input" ui:field="txtValue"/>
            <widget:FontIcon ui:field="btnSetup"></widget:FontIcon>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>