<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            padding: 5px 10px;
            cursor: default;
            user-select: none;
        }
        .box:HOVER{
            background-color: darkcyan;
        }
        .box[select="true"]{
            background-color: skyblue;
        }
        .icon {
            font-size: 1.6rem;
            color: tomato;
        }
        .name
        {
            font-size: 1.1rem;
            font-weight: bold;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <g:Label addStyleNames="{style.icon}" ui:field="icon"/>
        <g:Label addStyleNames="{style.name}" ui:field="name"/>
    </g:HTMLPanel>
</ui:UiBinder>