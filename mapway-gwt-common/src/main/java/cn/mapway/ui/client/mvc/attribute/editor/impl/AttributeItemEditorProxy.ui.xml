<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="cn.mapway.ui.client.mvc.attribute.editor.impl.AttributeItemEditorProxy.SStyle">
        .layout2 {
            display: grid;
            grid-gap: 8px;
            grid-template-columns: 120px 1fr;
            align-items: center;
            justify-content: space-between;
            justify-items: flex-end;
            border-bottom: solid 1px rgba(0, 0, 0, 0.1);
            padding: 4px 0;
            min-height: 43px;
        }

        .error {
            color: red;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 100%;
            cursor: default;
        }

        .head {
            cursor: default;
            justify-self: flex-start;
            padding-left: 1rem;
            align-self: center;
        }</ui:style>
    <g:HTMLPanel styleName="{style.layout2}" ui:field="box">
        <g:Label ui:field="lbHeader" styleName="{style.head}"/>
    </g:HTMLPanel>
</ui:UiBinder>