<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
>
    <ui:style>
        @eval BK_HEADER "var(--color-table-header)";
        .summary {
            font-size: 1rem;
            padding: 15px;
            user-select: none;
            line-height: 1.6;
            color: #3d7e3d;
            text-indent: 2rem;
        }

        .summary > p {
            color: #3d7e3d;
        }

        .panel {
            margin-left: 10px;
            padding-bottom: 2rem;
        }

        .name {
            font-weight: bold;
            font-size: 1.1rem;
            user-select: none;
            line-height: 32px;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }

        .btn {
            height: 38px;
            width: 38px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.6rem;
        }

        .btn:HOVER {
            background-color: darkgray;
        }

        .top {
            background-color: BK_HEADER;
            display: flex;
            justify-content: space-between;
            justify-items: center;
            padding: 0 0 0 0.5rem;
            align-items: center;
        }

        .content {
            padding-top: 1rem;
        }</ui:style>
    <g:DockLayoutPanel ui:field="root">
        <g:east size="0">
            <g:ScrollPanel ui:field="right" styleName="ai-border-left {style.panel}">
                <g:HTML ui:field="htmlSummary" styleName="{style.summary}">
                </g:HTML>
            </g:ScrollPanel>
        </g:east>
        <g:north size="38">
            <g:HTMLPanel ui:field="namePanel" styleName="{style.top} el-color-primary-light-3-background">
                <g:Label ui:field="lbName" styleName="{style.name}"/>
                <widget:FontIcon ui:field="btnInfo" addStyleNames="{style.btn}" pushButton="true"
                                    visible="true"/>
                <widget:FontIcon ui:field="btnSave" addStyleNames="{style.btn}" pushButton="true"
                                    visible="false"/>
            </g:HTMLPanel>
        </g:north>
        <g:north size="0">
            <g:HTML styleName="ai-message-panel" ui:field="messagePanel"/>
        </g:north>
        <g:center>
            <g:ScrollPanel addStyleNames="{style.content}">
                <g:HTMLPanel width="100%" ui:field="panel">
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
