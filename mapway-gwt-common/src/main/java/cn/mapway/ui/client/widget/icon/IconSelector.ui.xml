<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        .box {
            text-align: center;
            padding: 10px 20px 10px 20px;
        }

        .head {
            height: 24px;
            padding-left: -10px;
            font-family: MicrosoftYaHei-Bold;
            font-size: 18px;
            color: #333333;
            font-weight: 700;
        }

        .info {
            font-style: italic;
            padding-right: 0.5em;
            color: crimson;
        }
    </ui:style>
    <g:DockLayoutPanel width="720px" height="450px">
        <g:north size="40">
            <g:HorizontalPanel width="100%" height="40px" styleName="ai-toolbar" verticalAlignment="middle" spacing="3">
                <g:Label styleName="{style.head}">图标选择</g:Label>
                <g:cell horizontalAlignment="right">
                    <g:HorizontalPanel spacing="4" verticalAlignment="middle">
                        <g:Label styleName="{style.info}" ui:field="lbInfo"/>
                        <g:Button ui:field="btnClear">清除选择</g:Button>
                    </g:HorizontalPanel>
                </g:cell>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel styleName="{style.box}">
                <g:FlexTable ui:field="panel" cellSpacing="8">

                </g:FlexTable>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
