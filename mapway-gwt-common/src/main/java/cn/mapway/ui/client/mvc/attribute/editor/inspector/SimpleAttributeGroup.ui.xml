<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:component="urn:import:cn.satway.cis.client.component">
    <ui:style>
        .group {
            outline: none;
        }

        .title {
            padding: 0 8px;
            user-select: none;
            line-height: 38px;
            font-size: 1.2rem;
        }

        .content {
            margin-left: 0.5rem;
        }</ui:style>
    <g:HTMLPanel styleName="{style.group}">
        <g:Label ui:field="lbGroupName" addStyleNames="{style.title}"/>
        <g:HTMLPanel styleName="{style.content}">
            <g:VerticalPanel ui:field="slot" width="100%">
            </g:VerticalPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
