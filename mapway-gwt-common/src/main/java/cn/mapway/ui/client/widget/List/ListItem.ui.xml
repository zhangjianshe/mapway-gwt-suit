<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            height: 36px;
            border-radius: 5px;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }

        .box[select=true] {
            background-color: skyblue;
        }

        .icon {
            width: 36px;
            text-align: center;
        }

        .lb {
            font-size: 1rem;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <widget:FontIcon styleName="{style.icon}" ui:field="icon"/>
        <g:Label addStyleNames="{style.lb}" ui:field="lbName"/>
    </g:HTMLPanel>
</ui:UiBinder>