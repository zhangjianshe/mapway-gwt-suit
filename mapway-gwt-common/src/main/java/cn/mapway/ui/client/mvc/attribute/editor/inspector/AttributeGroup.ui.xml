<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:component="urn:import:cn.satway.cis.client.component"
             xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .group {
            outline: none;
        }

        .title {
            user-select: none;
            line-height: 38px;
            font-size: 1rem;
            font-weight: bold;
        }

        .content {
            padding: 0 8px 0 0;
            margin-left: 0.5rem;
            border-left: dashed 1px skyblue;
        }

        .place {
            padding-right: 6px;
            color: #808080;
            font-size: 1rem;
        }

        .clickable {
            cursor: pointer;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.group}">
        <g:HorizontalPanel verticalAlignment="middle" width="100%">
            <g:cell width="30px" horizontalAlignment="center">
                <widget:FontIcon fontSize="30" ui:field="lbExpand" addStyleNames="{style.clickable}"/>
            </g:cell>
            <g:Label ui:field="lbGroupName" addStyleNames="{style.title} {style.clickable}"/>
            <g:cell horizontalAlignment="right">
                <g:Label ui:field="lbCount" styleName="{style.place}"/>
            </g:cell>
        </g:HorizontalPanel>
        <g:HTMLPanel styleName="{style.content}">
            <g:VerticalPanel ui:field="slot" width="100%">
            </g:VerticalPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
