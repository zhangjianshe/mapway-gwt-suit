<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:tree="urn:import:cn.mapway.ui.client.widget.tree"
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:impl="urn:import:cn.mapway.ui.client.mvc.attribute.editor.impl">
    <ui:style>


        .panel {
            padding: 4px;
        }

        .summary {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .flex {
            display: flex;
            justify-content: center;
            align-items: center;
            justify-items: center;
        }</ui:style>
    <g:DockLayoutPanel>
        <g:south size="58">
            <dialog:SaveBar ui:field="saveBar" saveText="选择"/>
        </g:south>
        <g:west size="160">
            <g:ScrollPanel addStyleNames="ai-border-right">
                <tree:ZTree width="100%" ui:field="catalog"/>
            </g:ScrollPanel>
        </g:west>
        <g:east size="300">
            <g:ScrollPanel styleName="ai-border-left {style.panel}">
                <g:VerticalPanel width="100%" spacing="6">
                    <g:HTMLPanel ui:field="previewPlaceholder">
                        <impl:AttributeItemEditorProxy ui:field="preview"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel ui:field="designPanel">
                    </g:HTMLPanel>
                </g:VerticalPanel>
            </g:ScrollPanel>
        </g:east>
        <g:north size="70">
            <g:HTMLPanel styleName="{style.flex}">
                <g:Label ui:field="lbSummary" styleName="{style.summary}"/>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <g:FlexTable width="100%" cellPadding="4" styleName="attr-table" ui:field="table"/>
            </g:ScrollPanel>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>