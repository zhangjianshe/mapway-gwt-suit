<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:impl="urn:import:cn.mapway.ui.client.mvc.attribute.editor.impl">
    <ui:style>


        .panel {
            padding: 4px;
        }

        .summary {
            font-size: 1.1rem;
        }

        .flex {
            display: flex;
            justify-content: center;
            align-items: center;
            justify-items: center;
        }

        .preview {
            background-color: white;
            width: 70%;
        }

        .tab {
            border-bottom: solid 1px #f0f0f0;
        }

        .tab .gwt-TabLayoutPanelContent {
            padding: 0;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:south size="58">
            <dialog:SaveBar ui:field="saveBar" saveText="选择"/>
        </g:south>
        <g:north size="145">
            <g:TabLayoutPanel barHeight="50" ui:field="tableLayout" addStyleNames="{style.tab}">
            </g:TabLayoutPanel>
        </g:north>
        <g:east size="300">
            <g:ScrollPanel styleName="ai-border-left {style.panel}">
                <g:HTMLPanel ui:field="designPanel">
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:east>
        <g:south size="70">
            <g:HTMLPanel addStyleNames="{style.flex}">
                <g:Label ui:field="lbSummary" styleName="{style.summary}"/>
            </g:HTMLPanel>
        </g:south>
        <g:center>
            <g:HTMLPanel ui:field="previewPlaceholder" styleName="{style.flex}">
                <impl:AttributeItemEditorProxy addStyleNames="{style.preview}" ui:field="preview"/>
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>